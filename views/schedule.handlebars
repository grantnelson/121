<!DOCTYPE html>
<html ng-app = "classlist">

<!-- Basic Page Info -->
<head>
<title>ClassTrek &mdash Schedule</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<!-- CSS -->
<link href="/css/bootstrap.min.css" rel="stylesheet">
<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
<link href="/css/classtrek.css" rel="stylesheet">

<!-- JavaScript -->
</head>

<body id="background">
    <div class="outer">
        <div class="inner">
            <!-- Logo Image -->
            <img src="../images/betaIcon.png"/>



            <div ng-controller = "classlistcontroller">
                <form name="frm" ng-submit="addClass()">
                    <input type="text" name="newList" ng-model="newList" required>
                    <button ng-disable="frm.$invalid">Add</button>
                </form>
                <button ng-click = "clearClass()">Remove</button>
                <ul>
                    <li ng-repeat="class in classes">
                        <input type="checkbox" ng-model="class.done">
                        <span ng-class="{'done':class.done}">{{class.title}}</span>                       
                    </li>
                </ul>
            </div>

            <script>
            angular.moduel('classlist',[]).
            controller.('classlistcontroller',['$scope',function($scope){
               $scope.addClass = function(){
                $scope.classes.push({'title':$scope.newList, 'done':false})
                $scope.newList = ''
               }

               $scope.clearClass = function(){
                $scope.classes = $scope.classes.filter(function(item){return !item.done})
               }
            }}])
            </script>

